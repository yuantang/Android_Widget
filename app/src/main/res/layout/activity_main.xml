<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_gray"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/product_name_lly"
            android:background="@color/white_a"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/product_name_txt"
                android:text="产品名称"
                style="@style/sort_txt_style" />
        </LinearLayout>

        <com.coder.tom.android_widget.CHScrollView
            android:id="@+id/item_scroll_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_B_1"
                    style="@style/sort_lly_style"
                    android:background="@color/white"
                    >
                    <TextView
                        android:id="@+id/tv_B_1"
                        android:text="当前价"
                        style="@style/sort_txt_style" />
                    <ImageView
                        android:id="@+id/img_B_1"
                        android:src="@mipmap/arrow_fund_product_sort_desc"
                        style="@style/sort_img_style"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_B_2"
                    android:background="@color/white_a"
                    style="@style/sort_lly_style"
                    >

                    <TextView
                        android:id="@+id/tv_B_2"
                        android:text="涨跌幅"
                        style="@style/sort_txt_style" />
                    <ImageView
                        android:id="@+id/img_B_2"
                        android:src="@mipmap/arrow_fund_product_sort_desc"
                        style="@style/sort_img_style" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_B_3"
                    android:background="@color/white"
                    style="@style/sort_lly_style"
                    >

                    <TextView
                        android:id="@+id/tv_B_3"
                        android:text="涨跌额"
                        style="@style/sort_txt_style" />
                    <ImageView
                        android:id="@+id/img_B_3"
                        android:src="@mipmap/arrow_fund_product_sort_desc"
                        style="@style/sort_img_style"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_B_4"
                    android:background="@color/white_a"
                    style="@style/sort_lly_style">

                    <TextView
                        android:id="@+id/tv_B_4"
                        android:text="成交量"
                        style="@style/sort_txt_style" />
                    <ImageView
                        android:id="@+id/img_B_4"
                        android:src="@mipmap/arrow_fund_product_sort_desc"
                        style="@style/sort_img_style"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.coder.tom.android_widget.CHScrollView>

    </LinearLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/white_b"
        />

    <ListView
        android:id="@+id/hlistview_scroll_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/white_b"
        android:dividerHeight="1dp"
        android:dividerPadding="1dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:visibility="visible"
        >
    </ListView>

</LinearLayout>
